{
  "name": "uniform",
  "version": "1.0.0",
  "description": "Uniform is portable styles for VNN",
  "scripts": {
    "pretest": "npm run build",
    "pretest-single-run": "npm run build",
    "test": "node_modules/karma/bin/karma start karma.conf.js --single-run",
    "test-dev": "TEST=1 node_modules/karma/bin/karma start karma.conf.js",
    "postinstall": "node_modules/.bin/bower install",
    "build": "node_modules/.bin/gulp build",
    "dev": "node_modules/.bin/gulp dev",
    "server": "php -S localhost:8000",
    "deploy-docs": "bin/deploy.sh"
  },
  "devDependencies": {
    "bower": "^1.3.12",
    "del": "^0.1.3",
    "gulp": "^3.8.10",
    "gulp-concat": "^2.4.2",
    "gulp-minify-css": "^0.3.11",
    "gulp-rename": "^1.2.0",
    "gulp-sass": "~1.1.0",
    "node-sass": "~1.0.0",
    "gulp-uglify": "^1.0.1",
    "jasmine-core": "^2.1.2",
    "karma": "^0.12.28",
    "karma-jasmine": "^0.3.1",
    "karma-phantomjs-launcher": "^0.1.4"
  }
}
